# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Plans
GET     /plans                      controllers.Plans.list
GET     /plans/new                  controllers.Plans.showForm
POST    /plans                      controllers.Plans.create

# Users
GET     /login                      controllers.Users.showLoginForm
POST    /login                      controllers.Users.login
GET     /signup                     controllers.Users.showSignupForm
POST    /signup                     controllers.Users.signup
GET     /user                       controllers.Users.userInfo
